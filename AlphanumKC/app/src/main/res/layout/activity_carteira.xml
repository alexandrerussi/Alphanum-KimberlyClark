<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarteiraActivity">

    <include
        android:id="@+id/toolBarCarteira"
        layout="@layout/toolbar_no_elevation"/>

    <RelativeLayout
        android:id="@+id/header_carteira"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/toolBarCarteira"
        android:background="@color/gradientStart">

        <TextView
            android:id="@+id/txt_title_saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="24dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:text="SALDO ATUAL"
            />

        <TextView
            android:id="@+id/txt_saldo_carteira"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text=""
            android:textSize="40sp"
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/txt_title_saldo"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_carteira"
        android:background="@drawable/grad_bg">

        <Button
            android:id="@+id/btn_comprar_credito"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/et_bg"
            android:drawableTop="@drawable/ic_money"
            android:drawableTint="@color/white"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="Comprar crÃ©ditos"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</RelativeLayout>