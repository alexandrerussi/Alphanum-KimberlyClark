<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context="com.alphanum.plenitud.alphanumkc.CadastroActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:id="@+id/textViewCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastre-se"
            android:textAllCaps="true"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewCadastro"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/linlayEdtText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtNomeCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/et_bg"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:hint="Insira seu nome"
                    android:textColorHint="@color/white"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/edtDataNascCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/et_bg"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:hint="Insira sua data de nascimento"
                    android:textColorHint="@color/white"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="date"/>

                <EditText
                    android:id="@+id/edtTelefoneCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/et_bg"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:hint="Insira seu telefone"
                    android:textColorHint="@color/white"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/edtEmailCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/et_bg"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:hint="Insira seu email"
                    android:textColorHint="@color/white"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:inputType="textEmailAddress"/>

                <EditText
                    android:id="@+id/edtSenhaCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/et_bg"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:hint="Insira sua senha"
                    android:textColorHint="@color/white"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:inputType="textPassword"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linlayEdtText1"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnCadastrar"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_bg"
                    android:text="Cadastrar"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-light"/>

                <Button
                    android:id="@+id/btnVoltarCadastro"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_bg"
                    android:text="Voltar"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-light"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
