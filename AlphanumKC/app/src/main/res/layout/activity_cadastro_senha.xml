<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".CadastroSenhaActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:id="@+id/textViewCadastroSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastre sua senha"
            android:textAllCaps="true"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewCadastroSenha">

            <EditText
                android:id="@+id/edtSenhaCadastroSenha"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/et_bg"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:hint="Insira sua nova senha"
                android:textColorHint="@color/white"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="70dp"
                android:inputType="textPassword"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtSenhaCadastroSenha"
                android:layout_marginTop="70dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnCadastrarSenha"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_bg"
                    android:text="Cadastrar"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-light"/>

                <Button
                    android:id="@+id/btnVoltarSenha"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_bg"
                    android:text="Voltar"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-light"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>